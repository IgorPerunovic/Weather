<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.Views.Forecast3Days"
             xmlns:views="clr-namespace:Weather.Views;assembly=Weather"
             BindingContext="{Binding Source={StaticResource Locator}, Path=Forecast3Days}"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
           <ListView ItemsSource="{Binding Forecast.List}" IsEnabled="False" RowHeight="100">
               <ListView.ItemTemplate>
                   <DataTemplate>
                       <ViewCell>
                           <views:ForecastListItemView/>
                        </ViewCell>
                   </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>